<div class="flex justify-center relative top-1/3 max-w-3xl">
  <div class="flex relative grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 p-4 mb-8 border rounded-lg bg-white shadow-lg">
    <div class="flex items-center">
      <div class="rounded-full h-8 w-8 bg-gray-500 flex items-center justify-center overflow-hidden">
        <div class="avatar">
          <div class="avatar avatar-md">
            <%= link_to image_tag(@post.user.decorate.avatar), user_path(@post.user), class: 'rounded-circle avatar-sm' %>
          </div>
        </div>
      </div>
      <p class="text-gray-400 text-sm ml-2"><%= comment.user.user_name %></p>
    </div>
    <div class="pt-5 pl-10">
      <p class="-mt-4 text-gray-500"><%= simple_format(comment.body) %></p>
    </div>  
    <div class="pt-5 pl-10 ml-auto self-end">
      <p class="text-gray-400 text-sm"><%= l comment.created_at, format: :short %></p>
    </div>
    <div class="flex justify-between w-full">
      <ul class='crud-menu-btn list-inline float-right'>
        <li class="list-inline-item">
          <%= link_to '#', id: "button-edit-" do %>
            <i class="fa-solid fa-pen"></i>
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to comment_path(comment), class: "js-delete-comment-button",data: { turbo_method: :delete } do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>