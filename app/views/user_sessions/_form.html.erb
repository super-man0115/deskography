<%= form_with url: login_path, method: :post, local: true, class: "max-w-lg border rounded-lg mx-auto" do |f| %>
  <div class="flex flex-col gap-4 p-4 md:p-8">
    <div>
      <%= f.label :email, User.human_attribute_name(:email), class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
      <%= f.text_field :email, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" %>
    </div>
    <div>
      <%= f.label :password, User.human_attribute_name(:password), class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
      <%= f.password_field :password, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" %>
    </div>
    <div class='flex justify-center'>
      <%= f.submit "Login", class: "block hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold btn btn-accent text-white btn-text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
    </div>
  <% end %>
  <div class="flex justify-center items-center relative">
    <span class="h-px bg-gray-300 absolute inset-x-0"></span>
    <span class="bg-white text-gray-400 text-sm relative px-4">Log in with social</span>
  </div>
  <div class="mt-3">
    <%= link_to auth_at_provider_path(provider: :twitter), class: "w-full px-4 py-2 inline-block bg-1D9BF0 hover:bg-gray-300 focus-visible:ring ring-indigo-300 text-white active:text-gray-700 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 pt-3", style: "background-color: #1D9BF0;" do %>
      <i class="fa-brands fa-twitter" style="color: #ffffff;"></i> Twitterでログイン
    <% end %>
  </div>
  <div class="mt-3">
    <%= link_to guest_login_path, data: { turbo_method: :post }, class: "w-full px-4 py-2 inline-block bg-1D9BF0 hover:bg-gray-300 focus-visible:ring ring-indigo-300 text-white active:text-gray-700 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 pt-3", style: "background-color: #D1D5DB;" do %>
        <i class="fa-regular fa-user"></i>ゲストログイン
    <% end %>
  </div>
</div>
<div class="flex flex-col justify-center items-center bg-gray-100 p-4">
  <div class='text-center'>
    <%= link_to (t '.password_forget'), new_password_reset_path, class: "inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" %>
  </div>
  <div>
    <%= link_to (t '.to_register_page'), new_user_path, class: "inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" %>
  </div>
</div>
